<% if flash[:notice] %>
    <div class="alert alert-success" role="alert" id="notice" class="notice">
        <%= flash[:notice] %>                                    
    </div>
<% end %>

<!--Se agrega personalizacion con boostrap para visualizacion de las vistas de zonas -->
<div class="container">
  <!-- Stack the columns on mobile by making one full-width and the other half-width -->



  <nav class="navbar navsep navbar-expand-sm navbar-rednav bg-rednav rounded">
    <div class="container-fluid">
      <div class="navbar-collapse" id="mynavbar">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
          <i>
            <%= link_to " Nueva factura", new_invoice_path, :class=>"nav-item nav-link bi bi-plus-square-dotted" %>
          </i>
          </li>
        </ul>
        <form class="d-flex">
          <input class="form-control me-2" type="text" placeholder="invoice">
          <button class="btn btn-secondary" type="button">Buscar</button>
        </form>
      </div>
    </div>
  </nav>

  
  <div class="row">
      <div class="col-md-8">
        <div class="tzona">
            <h1>FACTURAS</h1>
        </div>
            <table class="table table-dark table-hover">
                  <tr class="text-dark">
                    <th>CÓDIGO</th>
                    <th>PRECIO DE COMPRA</th>
                    <th>FECHA DE COMPRA</th>
                    <th>ACCIONES</th>
                  </tr>
                      <div id="invoices">
                        <% @invoices.each do |invoice| %>
                          <tr>
                            <td>
                              <%= invoice.id%>
                            </td>
                            <td>
                              <%= invoice.pricebuy %>
                            </td>
                            <td>
                              <%= invoice.date_buy %>
                            </td>
                            <td>
                              <i class="separar">
                              <%= button_to "", invoice, method: :delete, :class=>"bi bi-trash btn", :data=>{turbo_confirm:'Estás seguro?'}%>
                              <%= link_to "", edit_invoice_path(invoice), :title=>"Editar", :class=>" bi bi-pencil-fill btn" %>
                              </i>
                            </td> 
                          </tr>
                        <% end %>
                      </div>
            </table> 
      </div>
  </div>
</div>





